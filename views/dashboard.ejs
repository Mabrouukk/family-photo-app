<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-5">
  <div class="container">
    <h2 class="mb-4">Your Family Photo Album</h2>
    <form method="POST" action="/upload" enctype="multipart/form-data" class="mb-4">
      <div class="mb-3">
        <input type="file" name="photo" class="form-control mb-2" accept="image/*" capture="environment" required>
        <input type="text" name="caption" class="form-control" placeholder="Add a caption (optional)">
      </div>
      <button class="btn btn-success">Upload</button>
    </form>

    <div class="row">
      <% photos.forEach(photo => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="/uploads/<%= photo.filename %>" class="card-img-top">
            <div class="card-body">
              <p class="card-text"><%= photo.caption || 'No caption' %></p>
              <form action="/delete/<%= photo.id %>" method="POST">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <a class="btn btn-danger mt-3" href="/logout">Logout</a>
  </div>
</body>
</html>
